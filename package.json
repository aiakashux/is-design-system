{
  "name": "ideascale-design-system",
  "version": "1.0.0",
  "description": "Lightweight design system for Ideascale",
  "main": "dist/main.css",
  "files": [
    "dist",
    "tokens"
  ],
  "scripts": {
    "build": "node tokens/build.js && sass scss/main.scss dist/main.css",
    "dev": "sass --watch scss/main.scss:dist/main.css",
